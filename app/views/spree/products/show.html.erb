


<div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
  <% @body_id = 'product-details' %>

  <div class="columns sixteen alpha" data-hook="product_left_part">
    <div class="row" data-hook="product_left_part_wrap">

      <span id="product-images" data-hook="product_images">
        <span id="main-image" data-hook>
          <%= render :partial => 'image' %>
        </span>
        <span id="thumbnails" data-hook>
          <%= render :partial => 'thumbnails' %>
        </span>

      </span>

        <h1 class="product-title" itemprop="name"><%= accurate_title %></h1>

      <span id="cart-form" data-hook="cart_form">
        <%= render :partial => 'cart_form' %>
      </span>


    </div>
  </div>

  <div class="columns sixteen omega" data-hook="product_right_part" style="margin-top:20px">

  <h6 class="product-section-title"><%= t(:product_information) %></h6>

    <div id="tabs">
      <ul>
        <li><a href="#prod_tab_1" style="font-size: 13px; text-transform: uppercase; font-weight: 600"><span>Description</span></a></li>
        <li><a href="#prod_tab_2" style="font-size: 13px; text-transform: uppercase; font-weight: 600"><span>Details</span></a></li>
                <% if @product.label_image%>

        <li><a href="#prod_tab_3" style="font-size: 13px; text-transform: uppercase; font-weight: 600"><span>Label</span></a></li>
<% end %>
      </ul>
      <div id="prod_tab_1" style="height: 200px; overflow: scroll">
        <div id="product-description" data-hook="product_description">

          <div itemprop="description" data-hook="description">
            <%= product_description(@product) rescue t(:product_has_no_description) %>
          </div>

        </div>

      </div>
      <div id="prod_tab_2" style="height: 200px; overflow: scroll">

        <div data-hook="product_properties">
          <%= render :partial => 'properties' %>
        </div>

      </div>

      <% if @product.label_image? %>
      <div id="prod_tab_3" style="height: 200px; overflow: scroll">

        <div >
	        <%= image_tag @product.label_image_url(:original) %>
        </div>

      </div>
      <% end %>
      
    </div>


      <div>

        <div id="blah" data-hook>
	        <%= render :partial => 'spree/shared/reviews' %>
        </div>

      </div>



    <div class="row" data-hook="product_right_part_wrap">

    </div>

  </div>
</div>

</div>

<%= render :partial => "slider", :locals =>{:slider_products => (@product.also_boughts rescue []) } %>
